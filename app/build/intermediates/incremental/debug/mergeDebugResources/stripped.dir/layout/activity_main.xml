<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/enterZip"
        android:layout_width="101dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:text="Enter Zipcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
            android:id="@+id/editZip"
            android:layout_width="181dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterZip"/>

    <Button
        android:id="@+id/butZip"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:layout_marginStart="26dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/editZip"
        app:layout_constraintStart_toEndOf="@+id/editZip"
        app:layout_constraintTop_toTopOf="@+id/editZip" />

    <TextView
            android:id="@+id/textViewLongitude"
            android:layout_width="161dp"
            android:layout_height="28dp"
            android:layout_marginTop="17dp"
            android:text="Longitude:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editZip" android:textSize="16sp"
            android:gravity="center_vertical"/>

    <TextView
            android:id="@+id/textViewLatitude"
            android:layout_width="161dp"
            android:layout_height="28dp"
            android:layout_marginStart="30dp"
            android:text="Latitude:"
            app:layout_constraintBottom_toBottomOf="@+id/textViewLongitude"
            app:layout_constraintStart_toEndOf="@+id/textViewLongitude"
            app:layout_constraintTop_toTopOf="@+id/textViewLongitude" android:textSize="16sp"
            android:gravity="center_vertical"/>

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLocation" android:layout_marginTop="5dp">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/imageH1"
                        android:layout_width="82dp"
                        android:layout_height="70dp"
                        tools:srcCompat="@tools:sample/avatars"/>

                <TextView
                        android:id="@+id/TimeH1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time:"/>

                <TextView
                        android:id="@+id/TempH1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temp:"/>

                <TextView
                        android:id="@+id/DesH1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description:"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/imageH2"
                        android:layout_width="82dp"
                        android:layout_height="70dp"
                        tools:srcCompat="@tools:sample/avatars"/>

                <TextView
                        android:id="@+id/TimeH2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time:"/>

                <TextView
                        android:id="@+id/TempH2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temp:"/>

                <TextView
                        android:id="@+id/DesH2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description:"/>
            </LinearLayout>
        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/imageH3"
                        android:layout_width="82dp"
                        android:layout_height="70dp"
                        tools:srcCompat="@tools:sample/avatars"/>

                <TextView
                        android:id="@+id/TimeH3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time:"/>

                <TextView
                        android:id="@+id/TempH3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temp:"/>

                <TextView
                        android:id="@+id/DesH3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description:"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/imageH4"
                        android:layout_width="82dp"
                        android:layout_height="70dp"
                        tools:srcCompat="@tools:sample/avatars"/>

                <TextView
                        android:id="@+id/TimeH4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time:"/>

                <TextView
                        android:id="@+id/TempH4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temp:"/>

                <TextView
                        android:id="@+id/DesH4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description:"/>
            </LinearLayout>
        </TableRow>

    </TableLayout>
    <TextView
            android:text="Location:"
            android:layout_width="239dp"
            android:layout_height="28dp" android:id="@+id/textViewLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLongitude" android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent" android:gravity="center_vertical" android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>